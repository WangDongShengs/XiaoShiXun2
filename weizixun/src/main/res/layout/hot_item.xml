<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_margin="2dp"
    android:padding="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/iv_cl_hot"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_cl_hot"
            />
        <TextView
            android:id="@+id/tv_cl_hot"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:ellipsize="end"
            android:lines="2"
            app:layout_constraintTop_toTopOf="@id/iv_cl_hot"
            app:layout_constraintBottom_toBottomOf="@id/iv_cl_hot"
            app:layout_constraintLeft_toRightOf="@id/iv_cl_hot"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>